{
  "name": "node-typescript-boilerplate",
  "version": "0.0.1",
  "description": "Boilerplate - API Node/Typescript",
  "main": "server.ts",
  "scripts": {
    "dev": "ts-node-dev -r tsconfig-paths/register --inspect --transpile-only --ignore-watch node_modules --respawn src/shared/infra/http/server.ts",
    "start": "",
    "migration:create": "typeorm-ts-node-commonjs migration:create ./src/database/migrations/$npm_config_name",
    "migration:generate": "typeorm-ts-node-commonjs migration:generate -d ./src/database/index.ts ./src/database/migrations/$npm_config_name",
    "migration:show": "typeorm-ts-node-commonjs migration:show -d ./src/database/index.ts",
    "migration:run": "typeorm-ts-node-commonjs migration:run -d ./src/database/index.ts",
    "migration:revert": "typeorm-ts-node-commonjs migration:revert -d ./src/database/index.ts",
    "schema:drop": "typeorm-ts-node-commonjs schema:drop -d ./src/database/index.ts",
    "test": "set NODE_ENV=test && jest -i",
    "test:watch": "jest --watchAll -i"
  },
  "keywords": [],
  "author": {
    "name": "VÃ­tor Oliveira",
    "email": "vitorroliveiraa@outlook.com.br",
    "url": "https://vitorroliveiraa.herokuapp.com/"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/vitorroliveiraa/node-typescript-boilerplate/"
  },
  "license": "ISC",
  "engines": {
    "node": ">=14"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "express-async-errors": "^3.1.1",
    "pg": "^8.7.3",
    "reflect-metadata": "^0.1.13",
    "swagger-ui-express": "^4.4.0",
    "tsyringe": "^4.7.0",
    "typeorm": "^0.3.7",
    "uuid": "^8.3.2",
    "supertest": "^6.2.3"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.3",
    "@types/node": "^18.0.0",
    "@types/supertest": "^2.0.12",
    "@types/swagger-ui-express": "^4.1.3",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^3.2.1",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-import-helpers": "^1.2.1",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.1",
    "prettier": "^2.7.1",
    "ts-jest": "^28.0.5",
    "ts-node": "^10.8.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^4.7.4"
  }
}
